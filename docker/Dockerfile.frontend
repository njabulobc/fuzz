FROM node:20-alpine

WORKDIR /app

# Copy ONLY dependency files first â€” smallest cache key
COPY frontend/package*.json ./

RUN npm install

# Now copy the rest of the frontend source
COPY frontend/ .

# Build the Vite app
RUN npm run build

# Expose port for Vite preview or dev
EXPOSE 3000

# If you want the dev server inside Docker:
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]
